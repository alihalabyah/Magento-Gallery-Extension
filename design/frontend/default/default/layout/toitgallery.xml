<?xml version="1.0"?>
<layout version="0.1.0">

    <gallery_index_view>
    	<reference name="head">
			<action method="addJs"><script>toitgallery/jquery.js</script></action>
			<action method="addJs"><script>toitgallery/fancybox.js</script></action>
			<action method="addCss"><stylesheet>css/toitgallery/fancybox.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/toitgallery/gallery.css</stylesheet></action>
		</reference>
    	<reference name="root">    		
    		<action method="setTemplate"><template>page/1column.phtml</template></action>
    	</reference>    
    	<reference name="content">
    		<block type="gallery/gallery" name="breadcrumbs" template="gallery/breadcrumb.phtml" />
    		<block type="gallery/gallery" name="gallery" template="gallery/gallery.phtml"></block>
    	</reference>
    </gallery_index_view>
    <gallery_index_photo>
    	<reference name="head">
			<action method="addJs"><script>toitgallery/jquery.js</script></action>
			<action method="addJs"><script>toitgallery/fancybox.js</script></action>
			<action method="addCss"><stylesheet>css/toitgallery/fancybox.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/toitgallery/gallery.css</stylesheet></action>
		</reference>
    	<reference name="root">    		
    		<action method="setTemplate"><template>page/1column.phtml</template></action>
    	</reference>    
    	<reference name="content">
    		<block type="gallery/gallery" name="breadcrumbs" template="gallery/breadcrumb.phtml" />
    		<block type="gallery/gallery" name="gallery" template="gallery/photo.phtml"></block>
    	</reference>
    </gallery_index_photo>
</layout> 